{
  "info": {
    "name": "User Management Service with Google Sheets Sync",
    "description": "Complete API collection for User Management Service with Google OAuth and Google Sheets integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8003",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "user@example.com",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "sheet_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        },
        "description": "Check API health status"
      }
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Initiate Google OAuth Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    console.log('Authorization URL:', jsonData.authorization_url);",
                  "    console.log('Please visit this URL in your browser to complete authentication');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Initiates Google OAuth 2.0 flow and returns authorization URL"
          }
        },
        {
          "name": "OAuth Callback",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('auth_token', jsonData.access_token);",
                  "    console.log('Authentication successful! Token saved.');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/callback?code=YOUR_AUTH_CODE&state=YOUR_STATE",
              "host": ["{{base_url}}"],
              "path": ["auth", "callback"],
              "query": [
                {
                  "key": "code",
                  "value": "YOUR_AUTH_CODE",
                  "description": "Authorization code from Google"
                },
                {
                  "key": "state",
                  "value": "YOUR_STATE",
                  "description": "State parameter from OAuth flow"
                }
              ]
            },
            "description": "Handles OAuth callback from Google with authorization code"
          }
        },
        {
          "name": "Get Current User Info",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/me?email={{auth_token}}",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"],
              "query": [
                {
                  "key": "email",
                  "value": "{{auth_token}}"
                }
              ]
            },
            "description": "Get authenticated user information"
          }
        }
      ],
      "description": "Authentication endpoints using Google OAuth 2.0"
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Get All Users (Paginated)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users?page=1&page_size=10",
              "host": ["{{base_url}}"],
              "path": ["users"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "page_size",
                  "value": "10",
                  "description": "Items per page (default: 10, max: 100)"
                }
              ]
            },
            "description": "Fetch all users with pagination support"
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_id}}"]
            },
            "description": "Fetch a specific user by their ID"
          }
        },
        {
          "name": "Create User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('user_id', jsonData.id);",
                  "    console.log('User created with ID:', jsonData.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"role\": \"Developer\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            },
            "description": "Create a new user"
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Updated\",\n  \"role\": \"Senior Developer\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_id}}"]
            },
            "description": "Update an existing user by ID"
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_id}}"]
            },
            "description": "Delete a user by ID"
          }
        }
      ],
      "description": "CRUD operations for user management"
    },
    {
      "name": "Google Sheets Sync",
      "item": [
        {
          "name": "Create Google Sheet",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('sheet_id', jsonData.sheet_id);",
                  "    console.log('Sheet created with ID:', jsonData.sheet_id);",
                  "    console.log('Sheet URL:', jsonData.sheet_url);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sheet_name\": \"User Management - Test Sheet\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/sync/create-sheet",
              "host": ["{{base_url}}"],
              "path": ["sync", "create-sheet"]
            },
            "description": "Create a new Google Sheet with proper headers"
          }
        },
        {
          "name": "Sync to Cloud (DB → Google Sheets)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/sync/{{sheet_id}}/to-cloud",
              "host": ["{{base_url}}"],
              "path": ["sync", "{{sheet_id}}", "to-cloud"]
            },
            "description": "Sync all users from MongoDB to Google Sheets"
          }
        },
        {
          "name": "Sync from Cloud (Google Sheets → DB)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/sync/{{sheet_id}}/from-cloud",
              "host": ["{{base_url}}"],
              "path": ["sync", "{{sheet_id}}", "from-cloud"]
            },
            "description": "Sync users from Google Sheets to MongoDB"
          }
        }
      ],
      "description": "Google Sheets synchronization endpoints"
    }
  ]
}
